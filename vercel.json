{
  "version": 2,
  "builds": [
    {
      "src": "Backend/src/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxFiles": 10000,
        "distDir": "Backend/dist"
      }
    },
    {
      "src": "Frontend/src/**/*.{html,js,css,json}",
      "use": "@vercel/static",
      "config": {
        "maxFiles": 10000,
        "distDir": "Frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/api/v1/$1",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/dist/$1",
      "methods": ["GET"]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
