{
  "version": 2,
  "builds": [
    {
      "src": "src/api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/v1/(.*)", "dest": "/api/v1/$1" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "rewrites": [
    {
      "source": "/api/v1/user/:path*",
      "destination": "/api/user/:path*"
    },
    {
      "source": "/api/v1/chat/:path*",
      "destination": "/api/chat/:path*"
    }
  ]
}
